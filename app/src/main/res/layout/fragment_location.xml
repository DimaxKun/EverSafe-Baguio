<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#333333"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/top_bar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#FFA500"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="16dp">

        <ImageView
            android:id="@+id/icon_left"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:background="@drawable/applogo_size"
            android:scaleType="centerCrop"
            android:src="@drawable/applogo"
            android:clipToOutline="true"
            android:contentDescription="Left Icon" />

        <TextView
            android:id="@+id/title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="EverSafe Baguio"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/icon_right"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:background="@drawable/round_image_corner"
            android:clipToOutline="true"
            android:src="@drawable/avatar_icon"
            android:contentDescription="Right Icon" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ai_chat_bubble"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/chat_background"
        android:padding="12dp"
        app:layout_constraintBottom_toTopOf="@id/evacuation_center_image"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="16dp">

        <ImageView
            android:id="@+id/ai_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ai_chatbot"
            android:contentDescription="AI Icon"
            android:layout_marginEnd="8dp" />

        <TextView
            android:id="@+id/ai_message"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:text="Here are the available evacuation centers. Would you like directions?"
            android:textColor="#FFFFFF"
            android:textSize="16sp" />
    </LinearLayout>

    <ScrollView
        android:id="@+id/chat_scroll_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="8dp"
        app:layout_constraintBottom_toTopOf="@id/evacuation_center_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ai_chat_bubble"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:id="@+id/chat_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />
    </ScrollView>

    <ImageView
        android:id="@+id/evacuation_center_image"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:layout_margin="45dp"
        android:layout_marginBottom="8dp"
        android:src="@drawable/map_image"
        android:contentDescription="Nearby Evacuation Centers"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/quick_start_prompts"
        android:background="#333333" />

    <LinearLayout
        android:id="@+id/quick_start_prompts"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp"
        android:gravity="left"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/message_input_layout">

        <Button
            android:id="@+id/btn_nearest_center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/gray"
            android:layout_margin="2dp"
            android:text="Find the nearest evacuation center."
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/btn_safest_route"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/gray"
            android:layout_margin="2dp"
            android:text="Show me the safest route."
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/btn_center_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/gray"
            android:layout_margin="2dp"
            android:text="Check evacuation center status."
            android:textColor="#FFFFFF" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/message_input_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#000000"
        android:padding="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="80dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <EditText
            android:id="@+id/user_message"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#FFFFFF"
            android:hint="Message"
            android:padding="12dp"
            android:textColor="#000000" />

        <ImageButton
            android:id="@+id/send_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_send_24"
            android:contentDescription="Send"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="8dp" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
