<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFE5CC"
    tools:context=".MainActivity">

    <!-- Top bar with icon and title -->
    <LinearLayout
        android:id="@+id/top_bar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#FFA500"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:padding="16dp">

        <ImageView
            android:id="@+id/icon_left"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:background="@drawable/applogo_size"
            android:scaleType="centerCrop"
            android:src="@drawable/applogo"
            android:clipToOutline="true"
            android:contentDescription="Left Icon" />

        <TextView
            android:id="@+id/title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="EverSafe Baguio"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/icon_right"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:background="@drawable/round_image_corner"
            android:clipToOutline="true"
            android:src="@drawable/avatar_icon"
            android:contentDescription="Right Icon" />
    </LinearLayout>

    <!-- Evacuation Routes Image Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/card_disaster_alerts"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/top_bar"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:cardElevation="4dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/image_disaster_alerts"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:scaleType="fitXY"
                android:background="@drawable/border_image"
                android:src="@drawable/evacuationcenter" />

            <TextView
                android:id="@+id/text_disaster_alerts"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#40000000"
                android:gravity="center"
                android:text="EVACUATION ROUTES"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textSize="28sp"
                android:textStyle="bold" />
        </FrameLayout>
    </androidx.cardview.widget.CardView>

    <!-- Map and Safe Zone Info -->
    <LinearLayout
        android:id="@+id/map_safe_zone_layout"
        android:layout_width="match_parent"
        android:layout_height="550dp"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/card_disaster_alerts"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:padding="8dp"
        android:background="@drawable/yellow_border_background">

        <!-- Map Image -->
        <ImageView
            android:id="@+id/map_image"
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:scaleType="fitXY"
            android:src="@drawable/map_image"
            android:background="@drawable/black_border"
            android:contentDescription="Map Image" />

        <!-- Safe Zone Info with Icon -->
        <LinearLayout
            android:id="@+id/safe_zone_info_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="18dp"
            android:orientation="horizontal"
            android:background="@drawable/rounded_yellow_background"
            android:padding="8dp"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/safe_zone_info_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginEnd="8dp"
                android:src="@drawable/baseline_map_24"
                android:contentDescription="Safe Zone Info Icon" />

            <TextView
                android:id="@+id/safe_zone_info_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Safe Zone Info:"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>

        <TextView
            android:id="@+id/safe_zone_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="1dp"
            android:text="Name: Baguio Central Community Center"
            android:textColor="#333333"
            android:textSize="16sp"
            android:padding="7dp"
            android:background="@drawable/rounded_background" />

        <TextView
            android:id="@+id/safe_zone_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="1dp"
            android:text="Type: Community Center"
            android:textColor="#333333"
            android:textSize="16sp"
            android:padding="7dp"
            android:background="@drawable/rounded_background" />

        <TextView
            android:id="@+id/safe_zone_capacity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="1dp"
            android:text="Capacity: 150 / 200"
            android:textColor="#333333"
            android:textSize="16sp"
            android:padding="7dp"
            android:background="@drawable/rounded_background" />

        <TextView
            android:id="@+id/safe_zone_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="1dp"
            android:text="Address: 123 Main Street, Baguio City, Philippines"
            android:textColor="#333333"
            android:textSize="16sp"
            android:padding="7dp"
            android:background="@drawable/rounded_background" />

        <TextView
            android:id="@+id/safe_zone_contact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="2dp"
            android:text="Contact Number: +63 74 123 4567"
            android:textColor="#333333"
            android:textSize="16sp"
            android:padding="7dp"
            android:background="@drawable/rounded_background" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
