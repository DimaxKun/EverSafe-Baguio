<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFE5CC"
    tools:context=".MainActivity">

    <!-- Top bar with icon and title -->
    <LinearLayout
        android:id="@+id/top_bar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#FFA500"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:padding="16dp">

        <ImageView
            android:id="@+id/icon_left"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:background="@drawable/applogo_size"
            android:scaleType="centerCrop"
            android:src="@drawable/applogo"
            android:clipToOutline="true"
            android:contentDescription="Left Icon" />

        <TextView
            android:id="@+id/title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="EverSafe Baguio"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/icon_right"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:background="@drawable/round_image_corner"
            android:clipToOutline="true"
            android:src="@drawable/avatar_icon"
            android:contentDescription="Right Icon" />
    </LinearLayout>

    <!-- Disaster Alerts Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/card_disaster_alerts"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/top_bar"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:cardElevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/image_disaster_alerts"
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:scaleType="fitXY"
                    android:background="@drawable/border_image"
                    android:src="@drawable/disasterimages" />

                <TextView
                    android:id="@+id/text_disaster_alerts"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#40000000"
                    android:gravity="center"
                    android:text="DISASTER ALERTS"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF"
                    android:textSize="28sp"
                    android:textStyle="bold" />
                <!--                    android:shadowColor="#000000"-->
                <!--                    android:shadowDx="1"-->
                <!--                    android:shadowDy="1"-->
                <!--                    android:shadowRadius="1.5"  -->
            </FrameLayout>

            <!-- Severity Level Layout -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="68dp"
                android:background="@color/orange"
                android:orientation="horizontal"
                android:padding="10dp"
                android:layout_marginTop="0dp"
                android:gravity="center_vertical">

                <!-- Severity Level Text -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Severity Level:"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:textSize="17sp"
                    android:layout_marginEnd="8dp" />

                <!-- Low Risk (Green Circle) -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginEnd="16dp">

                    <View
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:background="@drawable/green_circle" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Low Risk"
                        android:textColor="#000000"
                        android:layout_marginStart="4dp" />
                </LinearLayout>

                <!-- Moderate (Yellow Circle) -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginEnd="16dp">

                    <View
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:background="@drawable/yellow_circle" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Moderate"
                        android:textColor="#000000"
                        android:layout_marginStart="4dp" />
                </LinearLayout>

                <!-- High Risk (Red Circle) -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <View
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:background="@drawable/red_circle" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="High Risk"
                        android:textColor="#000000"
                        android:layout_marginStart="4dp" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- List of Warning Cards -->
    <androidx.cardview.widget.CardView
        android:id="@+id/card_warning_1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:handwritingBoundsOffsetLeft="8dp"
        app:cardCornerRadius="8dp"
        app:layout_constraintTop_toBottomOf="@id/card_disaster_alerts"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp"
            android:background="@drawable/lightyellow_blackborders"
            android:gravity="center_vertical">

            <View
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:background="@drawable/yellow_circle"
                android:layout_marginEnd="8dp" />

            <!-- Warning Icon -->
            <ImageView
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:src="@drawable/baseline_flood_24"
                android:layout_marginEnd="12dp" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Flood Warning in Barangay X"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Prepare to evacuate!"
                    android:textColor="#555555"
                    android:textSize="14sp" />
            </LinearLayout>

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/baseline_volume_up_24" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- additional warnings -->
    <androidx.cardview.widget.CardView
        android:id="@+id/card_warning_2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:cardCornerRadius="8dp"
        app:layout_constraintTop_toBottomOf="@id/card_warning_1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp"
            android:background="@drawable/lightyellow_blackborders"
            android:gravity="center_vertical">

            <View
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:background="@drawable/red_circle"
                android:layout_marginEnd="8dp" />

            <ImageView
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:src="@drawable/baseline_broken_image_24"
            android:layout_marginEnd="12dp" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Earthquake Warning!"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Stay indoors and avoid buildings!"
                    android:textColor="#555555"
                    android:textSize="14sp" />
            </LinearLayout>

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/baseline_volume_up_24" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/card_warning_3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:cardCornerRadius="8dp"
        app:layout_constraintTop_toBottomOf="@id/card_warning_2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp"
            android:background="@drawable/lightyellow_blackborders"
            android:gravity="center_vertical">

            <View
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:background="@drawable/yellow_circle"
                android:layout_marginEnd="8dp" />

            <ImageView
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:src="@drawable/baseline_thunderstorm_24"
                android:layout_marginEnd="12dp" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Storm Warning!"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Prepare for strong winds and rain!"
                    android:textColor="#555555"
                    android:textSize="14sp" />
            </LinearLayout>

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/baseline_volume_up_24" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/emergencyButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="DIAL  911 Emergency"
        android:textAllCaps="true"
        android:backgroundTint="#FF0000"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:textSize="16dp"
        android:drawableLeft="@drawable/baseline_call_24"
        android:drawablePadding="8dp"
        android:padding="15dp"
        android:layout_marginTop="-150dp"
        android:layout_marginRight="86dp"
        android:layout_marginLeft="86dp"
        app:layout_constraintTop_toBottomOf="@id/card_warning_3"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
         />


</androidx.constraintlayout.widget.ConstraintLayout>
